---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'Entretenia',
    description: 'Sitio web para mostrar reseñas sobre obras de teatro e información completa desde la producción, horarios y precios de boletos.',
    link: {
        url: 'https://entretenia.com/',
    }
}, {
    name: 'Global Armor',
    description: 'Sitio web de una empresa líder en soluciones integrales de blindaje vehicular, corporal y arquitectónico.',
    link: {
        url: 'https://globalarmor.com.mx/'
    }
}, {
    name: 'Omnilaser',
    description: 'Aplicación web para agender citas con médicos especialistas en correción de padecimientos visuales.',
    link: {
        url: 'https://omnilaser.com.mx/'
    }
}, {
    name: 'Circulo Puro',
    description: 'Sitio web para ventas de puros y accesorios para fumadores, contiene un catálogo de sus productos.',
    link: {
        url: 'https://circulopuro.com/'
    }
}, {
    name: 'Evaluatest ia',
    description: 'Aplicación web para empresas en búsqueda de talento que sean afines a su vacante.',
    link: {
        url: 'https://empresas.evaluatest.com/'
    }
}, {
    name: 'Evaluatest',
    description: 'Aplicación web para los usuarios puedan destacar en entrevistas a través de sus habilidades.',
    link: {
        url: 'https://talento.evaluatest.com/'
    }
}, {
    name: 'Bankaya',
    description: 'Aplicación móvil que brinda servicios y beneficios financieros como: pagos de servicios, recargas, transferencias y créditos.',
    link: {
        url: 'https://bankaya.com.mx/'
    }
}];
---

<div>

    <h2 class="text-2xl font-bold text-white mb-6 mt-4">Proyectos en los que he colaborado</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-current_line rounded-lg p-4 bg-background">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-comment">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-current_line rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Sitio del proyecto'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
